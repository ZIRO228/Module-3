<Window x:Class="DataFilteringApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система фильтрации данных" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Введите данные (через запятую):" FontWeight="Bold" />
            <TextBox x:Name="DataInputTextBox" Width="350" Margin="0,5,0,10" />

            <TextBlock Text="Введите фильтр:" FontWeight="Bold" />
            <TextBox x:Name="FilterTextBox" Width="350" Margin="0,5,0,10" />

            <Button Content="Добавить данные" Width="350" Click="AddDataButton_Click" />
            <Button Content="Применить фильтр" Width="350" Click="FilterDataButton_Click" Margin="0,10,0,0" />

            <TextBlock x:Name="FilteredDataTextBlock" FontSize="16" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>