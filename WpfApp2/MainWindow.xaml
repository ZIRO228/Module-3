<Window x:Class="NotificationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомления" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Введите сообщение:" />
            <TextBox x:Name="MessageTextBox" Width="300" Margin="0,5,0,20" />

            <Button Content="Отправить сообщение" Width="300" Click="MessageButton_Click" />
            <Button Content="Совершить звонок" Width="300" Click="CallButton_Click" Margin="0,10,0,0" />
            <Button Content="Отправить письмо" Width="300" Click="EmailButton_Click" />

            <TextBlock x:Name="StatusTextBlock" FontSize="16" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>